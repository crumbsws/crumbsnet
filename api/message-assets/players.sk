        add {experience::%victim's uuid%} to {experience::%attacker%}
        send title "&a&l+ %{experience::%victim's uuid%}%" with subtitle "&6&l%{level::%attacker%}%&8 &8&l>> &a%{experience::%attacker%}%&7/&a%{required::%attacker%}% &8&8&l>>" to attacker for 1 seconds

on death:
    if {required::%attacker%} is not set:
        set {required::%attacker%} to 500
    if victim is a mob:
        if {experience::%attacker%} is greater than {required::%attacker%}:
            add 50 to {required::%attacker%}
            set {experience::%attacker%} to 0
            add 1 to {level::%attacker%}
            send title "&6&lLEVEL UP+" with subtitle "&7You are now level &8%{level::%attacker%}%" to attacker for 3 seconds
            play sound "ui.toast.challenge_complete" at volume 1 at pitch 2 to attacker
