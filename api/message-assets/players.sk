
on join:
    if {experience::%player%} is not set:
        set {experience::%player%} to 0
    if {level::%player%} is not set:
        set {experience::%player%} to 0
on spawn of a mob:
    if {experience::%entity's uuid%} is not set:
        set {experience::%entity's uuid%} to 1

on spawn of a zombie:
    if name of event-entity contains "Gloomy":
        set {_randomNumber} to a random integer between 1 and 50
        set name of the event-entity to "&aGloomy Slime &8[&8Lv. %{_randomNumber}%&8]"
        set {experience::%entity's uuid%} to {_randomNumber}
on spawn of a zombie:
    if name of event-entity contains "Grape":
        set {_randomNumber} to a random integer between 1 and 20
        set name of the event-entity to "&5Grape Zombie &8[&8Lv. %{_randomNumber}%&8]"
        set {experience::%entity's uuid%} to {_randomNumber}
on spawn of a zombie:
    if name of event-entity contains "&nApple" or "&cApple":
        set {_randomNumber} to a random integer between 1 and 20
        set name of the event-entity to "&cApple Zombie &8[&8Lv. %{_randomNumber}%&8]"
        set {experience::%entity's uuid%} to {_randomNumber}
on spawn of a bee:
    if name of event-entity contains "Wasp":
        set {_randomNumber} to a random integer between 1 and 50
        set name of the event-entity to "&eSeasoned Wasp &7(&aP&7) &8[&8Lv. %{_randomNumber}%&8]"
        set {experience::%entity's uuid%} to {_randomNumber}
on spawn of a wolf:
    set {_randomNumber} to a random integer between 1 and 50
    set name of the event-entity to "Wild Wolf &8[&8Lv. %{_randomNumber}%&8]"
    set {experience::%entity's uuid%} to {_randomNumber}
on block break:
    if event-block is wheat:
        set {_randomNumber} to a random integer between 1 and 5
        play sound "entity.player.experienceup" with volume 20 and pitch 300 to player
        add {_randomNumber} to {experience::%player%}
        send title "&e&l+ %{_randomNumber}%" with subtitle "&6&l%{level::%player%}%&8 &8&l>> &8&a%{experience::%player%}%&7/&a%{required::%player%}%" to player for 1 seconds
