command /level:
    trigger:
        message "&6&l&m-------------------"
        message "&7Your EXP: &8&l(&a%{experience::%player%}%&8&l)"
        message "&7Your Level: &8&l(&6%{level::%player%}%&8&l)"
        message "&6&l&m-------------------"
  
command /reset <text>:
    trigger:
        if arg-1 is "level":
            message "&6&l&m-------------------"
            message "&cAre you sure you want to reset all your statistics? &e/reset confirm"
            message "&6&l&m-------------------" 
        if arg-1 is "confirm":
            set {level::%player%} to 0
            set {experience::%player%} to 0
            set {required::%player%} to 500
            message "&6&l&m-------------------"
            message "&cResetted your level"
            message "&6&l&m-------------------"



on placeholderapi placeholder request for the prefix "skript":
    if the identifier is "experience":
        set the result to "%{experience::%player%}%&7/&a%{required::%player%}%"
    if the identifier is "level":
        set the result to "%{level::%player%}%"
